<%= form_for @post, html: { multipart: true } do |f| %>
	<div class="text">
		<%= f.text_area :body, placeholder: "What are you thinking, #{current_user.name}?" %>
	</div>

	<span class="picture">
		<%= f.file_field :photo, accept: 'image/jpeg, image/gif, image/png' %>
	</span>

	<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>