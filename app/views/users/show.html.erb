<%= provide(:title, @user.name) %>
<%= render 'posts/post_form' %>

<% unless current_user == @user %>
  <%= render partial: 'friendship/friendships_status', locals: {user: @user} %> 
<% end %>

<% if @user.posts.any? %>
  <% @user.posts.each do |post| %>
		<%= render partial: 'posts/post_partial', locals: { post: post } %>
  <% end %>
<% end %>